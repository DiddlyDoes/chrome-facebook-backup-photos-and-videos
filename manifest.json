{
  "manifest_version": 2,
  "name": "Facebook Photos And Videos Backup",
  "version": "0.3",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fbcdn.net/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Download",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.facebook.com/*",
    "activeTab",
    "downloads",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
