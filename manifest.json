{
  "manifest_version": 2,
  "version": "0.6",
  "name": "Facebook Backup Photos And Videos",
  "short_name": "Facebook Backup",
  "homepage_url": "http://socialmind.ai/facebook-backup/",
  "author": "Martin Majlis",
  "description": "Backup all photos and videos from single group, page, or user profile.",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.fbcdn.net/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Download",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.facebook.com/*",
    "activeTab",
    "downloads",
    "storage"
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
